<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/ico" href="~/Images/images.jpg">
    <title>@ViewBag.Title - Medicines Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background-image: url(<%=ResolveClientUrl("~/Content/Images/background.png")%>
    <div id="sidebar-wrapper">
        <ul id="sidebar_menu" class="sidebar-nav style=" text-align right; padding 10px;
            padding-top 10px"></ul>
        <ul class="sidebar-nav navbar-right col-md-3" style="float: right;
    width: 15%;
    height: 60%;
    background-color: #06C0AB;
    color: white;
    font: 32px Lato;
    font-weight: 100;
    text-align: center;
    top: 0;
    left: 0;
    bottom: 0;
    position: relative;">
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Users", "Users", "Home")</li>
        </ul>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Medicines Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                    <li>@Html.ActionLink("New Post", "Create", "Posts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
        <hr />
        <p>Total Number of visitors: @ApplicationInstance.Application["Totaluser"]</p>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<footer style="text-align:center;text-decoration-color:blue">
    <p>&copy; @DateTime.Now.Year - Medicines Blog</p>
</footer>
</html>
