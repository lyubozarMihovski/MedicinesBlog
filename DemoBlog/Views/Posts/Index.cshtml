@model PagedList<DemoBlog.Models.Post>
@using DemoBlog.Classes;
@{
    ViewBag.Title = "Index";
}
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>
<h2>Medicines</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="background-image:url(/Content//Content/unnamed.jpg)">

    <img src="~/Content/unnamed.jpg" alt="logo">
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
               Body
            </th>
            <th>
                Date
            </th>
            <th>
                Author
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Utils.CutText(item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @if (item.Author != null)
                    {
                        @item.Author.UserName
                    }
                    else
                    {
                        @:<i>No Author</i>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>
<div class="col-sm-10">
    <div class="center">
        @Html.PagedListPager((IPagedList)ViewBag.pagedList, page => Url.Action("Index", new { page }))
    </div>
</div>